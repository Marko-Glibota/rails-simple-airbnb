<div class="container">
  <h1>All our flats (<%= @flats.count %>)</h1>

  <ul class="flexy">
    <% @flats.each do |flat| %>
      <li>
        <div>
          <img src="https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80">
        </div>
        <div class="pad-10 card-mg card-title">
          <%= flat.name %>
        </div>

        <div class="pad-10 card-mg">
          <p><i class="fas fa-map-marker-alt"></i> <%= flat.address %></p>
        </div>

        <div class="pad-10 card-mg block-in">
          <p><i class="fas fa-user"></i> <%= flat.number_of_guests %></p>
          <p><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
        </div>

        <div class="pad-10 card-mg card-bottom">
          <%= link_to "More info", flat_path(flat) %>
          <%= link_to "Edit", edit_flat_path(flat) %>
          <%= link_to "Remove", flat_path(flat),
                method: :delete,
                data: { confirm: "Are you sure?" }%>
        </div>

      </li>
    <% end %>
  </ul>
</div>
