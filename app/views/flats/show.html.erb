<div class="container">
  <h1><%= @flat.name %></h1>

  <p><strong>Address:</strong> <%= @flat.address %></p>
  <p><strong>Description:</strong> <%= @flat.description %></p>
  <p><strong>Price per night:</strong> <%= @flat.price_per_night %></p>
  <p><strong>Number of guests:</strong> <%= @flat.number_of_guests %></p>

  <p><%= link_to "Edit flat", edit_flat_path(@flat) %></p>
  <p><%= link_to "Delete #{@flat.name}",
                flat_path(@flat),
                method: :delete,
                data: { confirm: "Are you sure?" } %></p>
  <p><%= link_to "Back to list", flats_path%></p>
</div>


